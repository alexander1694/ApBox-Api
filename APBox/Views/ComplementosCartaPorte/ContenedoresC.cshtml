@model API.Operaciones.ComplementoCartaPorte.ContenedorC


@using (Html.BeginCollectionItem("Mercancias.TransporteFerroviario.Carro.ContenedoresC"))
{
    @Html.ValidationSummary(true, "", new { @class = "label-blue-alt" })

    <div class="card shadow-sm">
        <div class="card-header" style="background-color: #6D84C2;">
            <h3 class="card-title text-white">
                Contenedores
            </h3>
            <div class="card-toolbar">
                <a href="#" class="icon-separator" onclick="removeDetalleTFContenedor(this)">
                    <!--begin::Svg Icon -->
                    <span class="svg-icon svg-icon-3x">
                        <img src="~/_CDN/assets/media/icons/duotune/general/gen034.svg" width="30" height="30" />
                    </span>
                    <!--end::Svg Icon-->
                </a>
            </div>
        </div>
        <div class="card-body row TFContenedor">
            <div class="form-group col-xs-12 col-sm-3">
                @Html.LabelFor(model => model.Contenedor_Id, new { @class = "fw-bold" })<br />
                <p id="ContenedorId">@Model.Contenedor_Id</p>
                @Html.HiddenFor(model => model.Contenedor_Id)
            </div>
            <div class="form-group col-xs-12 col-sm-3">
                @Html.LabelFor(model => model.PesoContenedorVacio, new { @class = "fw-bold" })<br />
                <p id="PesoCVacio">@Model.PesoContenedorVacio</p>
                @Html.HiddenFor(model => model.PesoContenedorVacio)
            </div>
            <div class="form-group col-xs-12 col-sm-3">
                @Html.LabelFor(model => model.PesoNetoMercancia, new { @class = "fw-bold" })<br />
                <p id="PesoNMercancia">@Model.PesoNetoMercancia</p>
                @Html.HiddenFor(model => model.PesoNetoMercancia)
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"></div> <br />
}

