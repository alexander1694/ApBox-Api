@model API.Operaciones.ComplementoCartaPorte.Remolques

@using (Html.BeginCollectionItem("Remolques"))
{
    @Html.ValidationSummary(true, "", new { @class = "label-blue-alt" })

    <div class="card shadow-sm">
        <div class="card-header" style="background-color: #6D84C2;">
            <h3 class="card-title text-white">
                Remolques
            </h3>
            <div class="card-toolbar">
                <a href="#" class="icon-separator" onclick="removeDetalleRemolque(this)">
                    <!--begin::Svg Icon -->
                    <span class="svg-icon svg-icon-3x">
                        <img src="~/_CDN/assets/media/icons/duotune/general/gen034.svg" width="30" height="30" />
                    </span>
                    <!--end::Svg Icon-->
                </a>
            </div>
        </div>

        <div class="card-body row RemolqueAutoTranspEdit">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.AutoTransporte_Id)
            <div class="form-group col-xs-12 col-sm-3">
                @Html.LabelFor(model => model.Placa, new { @class = "fw-bold" })<br />
                @Html.DisplayFor(model => model.Placa)
                @Html.HiddenFor(model => model.Placa)
            </div>
            <div class="form-group col-xs-12 col-sm-3">
                @Html.LabelFor(model => model.SubTipoRem_Id, new { @class = "fw-bold" })<br />
                @Html.DisplayFor(model => model.SubTipoRem_Id)
                @Html.HiddenFor(model => model.SubTipoRem_Id)
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"></div>
    <br />
}


