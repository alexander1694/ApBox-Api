@model API.Operaciones.ComplementoCartaPorte.Pedimentos


@using (Html.BeginCollectionItem("Pedimentoss"))
{
    @Html.ValidationSummary(true, "", new { @class = "label-blue-alt" })

    <div class="card shadow-sm">
        <div class="card-header" style="background-color: #6D84C2;">
            <h3 class="card-title text-white">
                <i class="glyph-icon icon-money"></i>
                Pedimento
            </h3>
            <div class="card-toolbar">
                <a href="#" class="icon-separator" onclick="removeDetallePedimentos(this)">
                    <!--begin::Svg Icon -->
                    <span class="svg-icon svg-icon-3x">
                        <img src="~/_CDN/assets/media/icons/duotune/general/gen034.svg" width="30" height="30" />
                    </span>
                    <!--end::Svg Icon-->
                </a>
            </div>
        </div>
        <div class="card-body row Pedimentos">
            <div class="form-group col-xs-12 col-sm-3">
                @Html.LabelFor(model => model.Pedimento, new { @class = "fw-bold" })<br />
                <p id="Pedimento">@Model.Pedimento</p>
                @Html.HiddenFor(model => model.Pedimento)
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"></div><br />
}


